<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="240dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="37dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sback"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_gravity="center"
                android:fontFamily="@font/bangers"
                android:padding="10dp"
                android:text=" Crime Reporting Mansgement System"
                android:textColor="#0082bf"
                android:textSize="17sp"
                app:fontFamily="@font/roboto_mono_bold_italic" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="159dp">


                <ImageView
                    android:id="@+id/add_pic"
                    android:layout_width="102dp"
                    android:layout_height="94dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="126dp"
                    android:layout_marginLeft="126dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginBottom="29dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_add_a_photo_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/add_pictext"
                    android:layout_width="134dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="101dp"
                    android:layout_marginLeft="101dp"
                    android:layout_marginBottom="5dp"
                    android:text="       Profile Picture"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="452dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="278dp">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ADCCE2"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="40dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="373dp"
                android:layout_height="52dp"
                android:layout_marginBottom="14dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:drawableRight="@drawable/ic_baseline_email_24"
                android:fontFamily="@font/strait"
                android:hint="Email"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#D0D3D4 "
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#ADCCE2"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/password"
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:fontFamily="@font/strait"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#D0D3D4 "
                android:textSize="18sp"

                app:passwordToggleEnabled="true"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="107dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#ADCCE2"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/dutyid"
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="52dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:fontFamily="@font/strait"
                android:hint="Duty/Duty ID"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#D0D3D4 "
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/signup"
                app:layout_constraintEnd_toEndOf="parent"
                app:passwordToggleEnabled="true"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="#ADCCE2"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="88dp"
                android:background="@drawable/circleangle"
                android:gravity="center"
                android:padding="16dp"
                android:text="Sign up"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pswrd"
                tools:ignore="UnknownId" />

            <ProgressBar
                android:id="@+id/progresbar"
                android:layout_width="115dp"
                android:layout_height="66dp"
                android:layout_marginStart="164dp"
                android:layout_marginLeft="164dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="132dp"
                android:layout_marginRight="132dp"
                android:layout_marginBottom="17dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/login_btn_on_signup"
                android:layout_width="94dp"
                android:layout_height="36dp"
                android:layout_marginStart="29dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="71dp"
                android:layout_marginEnd="93dp"
                android:layout_marginRight="93dp"
                android:layout_marginBottom="18dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:text="   Login"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/progresbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>